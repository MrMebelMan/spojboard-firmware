# EditorConfig for SpojBoard
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# C/C++ source files
[*.{c,cpp,h,hpp,ino}]
indent_size = 4

# Python scripts (PlatformIO)
[*.py]
indent_size = 4

# Web files (HTML/CSS/JS in web templates)
[*.{html,css,js}]
indent_size = 2

# JSON configuration
[*.json]
indent_size = 2

# YAML/INI configuration
[*.{yml,yaml,ini}]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false

# Makefiles require tabs
[Makefile]
indent_style = tab
